# FORGE Backend Configuration
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql+asyncpg://forge:forge@localhost:5432/forge
DATABASE_URL_SYNC=postgresql+psycopg2://forge:forge@localhost:5432/forge

# Redis
REDIS_URL=redis://localhost:6379/0

# Anthropic Claude API (required for AI-powered ticket analysis)
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Authentication
SECRET_KEY=forge-dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Google Maps API (optional, for enhanced routing)
GOOGLE_MAPS_API_KEY=

# Application
APP_NAME=FORGE
APP_VERSION=0.1.0
DEBUG=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
